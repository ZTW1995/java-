
/**
 *	定义剑士职业Saber类
 *	@date 2016.6.5
 *	@author ZTW
 *	剑士职业的属性成长属于中庸
 */
public class Saber extends Professional {

	@Override
	void addMaxHP(int lev) {
		maxHP=10*(lev+5);
	}

	@Override
	void addMaxMP(int lev) {
		maxMP=5*(lev+7);
	}

	@Override
	void addAttack(int lev) {
		attack=attack+3;
	}

	@Override
	void addDefense(int lev) {
		defense=defense+4;
	}
}
